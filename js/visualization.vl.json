{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "title": "Number of Internet User per Country Population in 2015",
  "width": 1000,
  "height": 400,
  "data": {
    "url": "https://raw.githubusercontent.com/xintiannnnnnnn/FIT3179_Homework_W9/refs/heads/main/js/ne_110m.json",
    "format": {"type": "topojson", "feature": "ne_110m_admin_0_countries"}
  },
  "projection": {"type": "equalEarth"},
  "layer": [
    {
      "data": {
        "url": "https://raw.githubusercontent.com/FIT3179/Vega-Lite/main/7_others/oceans.topojson",
        "format": {"type": "topojson", "feature": "oceans"}
      },
      "mark": {"type": "geoshape", "fill": "#b9d8f6"}
    },
    {
      "data": {
        "url": "https://raw.githubusercontent.com/xintiannnnnnnn/FIT3179_Homework_W9/refs/heads/main/js/ne_110m.json",
        "format": {"type": "topojson", "feature": "ne_110m_graticules_30"}
      },
      "mark": {"type": "geoshape", "fill": null, "stroke": "#bdbcbc"}
    },
    {
      "transform": [
        {
          "calculate": "'Data is unavailable for ' + datum.properties.NAME",
          "as": "note"
        }
      ],
      "mark": {"type": "geoshape", "fill": "lightgray", "stroke": "white"},
      "encoding": {"tooltip": {"field": "note"}}
    },
    {
      "transform": [
        {
          "lookup": "properties.NAME",
          "from": {
            "data": {
              "url": "https://raw.githubusercontent.com/xintiannnnnnnn/FIT3179_Homework_W9/refs/heads/main/data/number_of__internet_users.csv"
            },
            "key": "Entity",
            "fields": ["Number of Internet Users per 100,000 people"]
          }
        }
      ],
      "mark": {"type": "geoshape", "stroke": "#e5e5e5"},
      "encoding": {
        "color": {
          "field": "Number of Internet Users per 100,000 people",
          "type": "quantitative",
          "scale": {"type": "linear", "domain": [100, 0], "scheme": "cividis"},
          "legend": {"orient": "bottom", "labelLimit": 50},
          "title": "Number of Internet Users per 100,000 people"
        },
        "tooltip": [
          {"field": "properties.NAME", "type": "nominal", "title": "Country "},
          {
            "field": "Number of Internet Users per 100,000 people",
            "type": "quantitative",
            "title": "Number of Internet Users per 100,000 people"
          }
        ]
      }
    }
  ],
  "config": {}
}